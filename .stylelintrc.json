{
    "extends": "stylelint-config-standard",
    "customSyntax": "postcss-styled",
    "rules": {
        "declaration-colon-newline-after": "always-multi-line",
        "property-no-unknown": [ true, {
        "ignoreProperties": ["content-visibility"]
        }]
    },
    "ignoreFiles": [
        "build/**",
        "coverage/**",
        "dist/**",
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx"
    ]
}
